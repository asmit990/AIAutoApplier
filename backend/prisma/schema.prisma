datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id          String   @id @default(uuid())
  email       String   @unique
  password    String
  name        String?
  experience  Int?
  skills      String[]
  resumeText  String?
  createdAt   DateTime @default(now())
  applications Application[]
}

model Job {
  id          String   @id @default(uuid())
  title       String
  company     String
  description String
  keywords    String[]
  createdAt   DateTime @default(now())
  applications Application[]
}

model Application {
  id            String   @id @default(uuid())
  userId        String
  jobId         String
  matchScore    Float
  tailoredResume String
  status        String
  appliedAt     DateTime @default(now())

  user User @relation(fields: [userId], references: [id])
  job  Job  @relation(fields: [jobId], references: [id])
}
